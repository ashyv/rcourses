<% if !@submission.errors.empty? %>
  <div class="alert alert-error">
    <ul>
      <% @submission.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="well">
  <%= form_for @submission, url: submissions_new_path, html: { multipart: true } do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :attachment %>
    <%= f.file_field :attachment %>
    <%= f.hidden_field :submission, { :value => @submission } %>
    <%= f.hidden_field :submission_id, { :value => @submission.id } %>
    <%= f.hidden_field :assignment_id, { :value => params[:assignment_id] } %>
    <%= f.submit "Save", class: "btn btn-primary" %>
  <% end %>
</div>
<%= link_to 'Home', home_index_path %>